<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.katus.mybatis.mapper.UserMapper">
    <select id="selectUserById" resultType="com.katus.mybatis.bean.User" parameterType="java.lang.Long">
        select *
        from user
        where id = #{id}
    </select>
</mapper>